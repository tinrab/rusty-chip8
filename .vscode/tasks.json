{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      // "command": "run -- --rom-path ${input:romPath}",
      "command": "",
      // "args": [
      //   "--",
      //   "--rom-path",
      //   "${input:romPath}",
      // ],
      "problemMatcher": [
        "$rustc"
      ],
      "label": "rust: cargo run",
      "options": {
        "env": {
          "RUSTFLAGS": "-Awarnings"
        },
        "shell": {
          "executable": "cargo",
          "args": [
            "run",
            "--",
            "--rom-path",
            "${input:romPath}"
          ]
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "romPath",
      "type": "promptString",
      "description": "Path to the ROM file",
      "default": "${workspaceFolder}/roms/pong.rom"
    }
  ]
}
